<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="../public/style.css">
    <script src="https://kit.fontawesome.com/dd8ca4d5e5.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="sidebar">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="../IMG/Logo.png" alt="logo">
                </span>

                <div class="text header-text">
                    <!-- Display the logged-in user's name dynamically -->
                    <span class="name"><%= user ? user.username : 'Guest' %></span>
                    <span class="profession"><%= user ? user.role : '' %></span>
                </div>
            </div>
        </header>

        <div class="menu-bar">
            <div class="menu">
                <li class="search-box">
                    <i class="fa-solid fa-magnifying-glass icon"></i>
                    <input type="search" placeholder="Search...">
                </li>
                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="index.html">
                            <i class="fa-solid fa-house icon"></i>
                            <span class="text nav-text">Home</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="books.html">
                            <i class="fa-solid fa-book icon"></i>
                            <span class="text nav-text">Books</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="checkout.html">
                            <i class="fa-solid fa-list icon"></i>
                            <span class="text nav-text">Checkout</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="overdue.html">
                            <i class="fa-solid fa-clock icon"></i>
                            <span class="text nav-text">Overdue Book</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="reports.html">
                            <i class="fa-solid fa-flag icon"></i>
                            <span class="text nav-text">Report</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="bottom-content">
                <li class="nav-link">
                    <a href="/logout">
                        <i class="fa-solid fa-right-from-bracket icon"></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="books-section">
            <!-- Add a New Book -->
            <div class="add-book-form">
                <h2>Add a New Book</h2>
                <form action="/books/add" method="post">
                    <label for="book-name">Name of Book:</label>
                    <input type="text" id="book-name" name="title" required>

                    <label for="isbn">ISBN:</label>
                    <input type="text" id="isbn" name="isbn" required>

                    <label for="year">Year:</label>
                    <input type="number" id="year" name="year" required>

                    <label for="edition">Edition:</label>
                    <input type="text" id="edition" name="edition">

                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" required>

                    <button type="submit">Add Book</button>
                </form>
            </div>

            <!-- Available Books -->
            <div class="available-books">
                <div class="books-header">
                    <h2>Available Books</h2>
                    <div class="search-box">
                        <input type="text" placeholder="Search books...">
                        <i class="fa-solid fa-search"></i>
                    </div>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>ISBN</th>
                            <th>Year</th>
                            <th>Edition</th>
                            <th>Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach(function(book) { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.isbn %></td>
                            <td><%= book.year %></td>
                            <td><%= book.edition ? book.edition : 'N/A' %></td>
                            <td><%= book.quantity %></td>
                            <td>
                                <a href="/books/edit/<%= book.id %>" class="edit-btn">Edit</a>
                                <a href="/books/delete/<%= book.id %>" class="delete-btn">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
